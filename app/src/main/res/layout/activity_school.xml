<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nguessan.script.School"
    android:background="#d0cece">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"/>


        <EditText
            android:id="@+id/about_self"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="TELL US ABOUT YOURSELF" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >


                <EditText
                    android:id="@+id/sports"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="SPORTS:" />

                <CheckBox
                    android:id="@+id/soccer_checkBox"
                    android:textSize="20sp"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:onClick="boxClick"
                    android:text="Soccer" />
                <CheckBox
                    android:id="@+id/checkBox2"
                    android:textSize="20sp"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:text="Football" />
                <CheckBox
                    android:id="@+id/checkBox3"
                    android:textSize="20sp"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:text="Hockey" />
                <CheckBox
                    android:id="@+id/checkBox4"
                    android:textSize="20sp"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:text="Baseball" />
                <CheckBox
                    android:id="@+id/checkBox5"
                    android:textSize="20sp"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:text="Tennis" />
                <CheckBox
                    android:id="@+id/checkBox6"
                    android:textSize="20sp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Basketball" />

                <EditText
                    android:id="@+id/music"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="MUSIC GENRES:" />
                <CheckBox
                    android:id="@+id/checkBox7"
                    android:textSize="20sp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Rock" />
                <CheckBox
                    android:id="@+id/checkBox8"
                    android:textSize="20sp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Country" />
                <CheckBox
                    android:id="@+id/checkBox9"
                    android:textSize="20sp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Jazz" />
                <CheckBox
                    android:id="@+id/checkBox10"
                    android:textSize="20sp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Rap" />
                <CheckBox
                    android:id="@+id/checkBox11"
                    android:textSize="20sp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Hip-Hop" />
                <CheckBox
                    android:id="@+id/checkBox12"
                    android:textSize="20sp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Rock" />
                <CheckBox
                    android:id="@+id/checkBox13"
                    android:textSize="20sp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Electronic" />

                <EditText
                    android:id="@+id/major"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="SCHOOL MAJOR:" />
                <CheckBox
                    android:id="@+id/checkBox14"
                    android:textSize="20sp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Engineering" />
                <CheckBox
                    android:id="@+id/checkBox16"
                    android:textSize="20sp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Computer Science" />
                <CheckBox
                    android:id="@+id/checkBox17"
                    android:textSize="20sp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Business" />
                <CheckBox
                    android:id="@+id/checkBox18"
                    android:textSize="20sp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Arts and Humanities" />
                <CheckBox
                    android:id="@+id/checkBox19"
                    android:textSize="20sp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Science (Biology, Chemistry, etc.)" />
                <CheckBox
                    android:id="@+id/checkBox20"
                    android:textSize="20sp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Math" />

                <ListView android:id="@+id/listView1"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"/>

            </LinearLayout>


</RelativeLayout>
